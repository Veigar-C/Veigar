<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.veigar.dao.IUserDao">

    <select id="selectUser" resultType="user" parameterType="long">
        SELECT * FROM user WHERE id = #{id}
    </select>
    <select id="selectDriver" resultType="DrivingLicense" parameterType="String">
        SELECT * FROM drivinglicense WHERE carNum = #{carNum}
    </select>
    <select id="selectRecord" resultType="ViolationRecord" parameterType="String">
        SELECT * FROM violationrecord WHERE carNum = #{carNum}
    </select>
</mapper>